{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@octopuscentral/central": ["packages/central/src"],
      "@octopuscentral/controller": ["packages/controller/src"],
      "@octopuscentral/instance": ["packages/instance/src"]
    },
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES6",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "composite": true
  },
  "include": ["packages/*/src"],
  "exclude": ["node_modules", "dist"]
}